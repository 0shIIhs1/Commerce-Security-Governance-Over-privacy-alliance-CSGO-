{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "python3",
          "cmd": "python3",
          "args": [
            "scripts/date_man.py",
            {
              "validator": ".*"
            },
            {
              "validator": ".*"
            },
            {
              "validator": ".*"
            },
            {
              "validator": ".*"
            },
            {
              "validator": ".*"
            },
            {
              "validator": ".*"
            }
          ]
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": [
            "scripts/start.sh",
            "--envPath",
            {
              "validator": ".*"
            },
            "--filePath",
            {
              "validator": ".*"
            },
            "--rayIp",
            {
              "validator": ".*"
            },
            "--rayPort",
            {
              "validator": ".*"
            },
            "--part1Name",
            {
              "validator": ".*"
            },
            "--part1Ip",
            {
              "validator": ".*"
            },
            "--part1Port",
            {
              "validator": ".*"
            },
            "--part2Name",
            {
              "validator": ".*"
            },
            "--part2Ip",
            {
              "validator": ".*"
            },
            "--part2Port",
            {
              "validator": ".*"
            },
            "--part3Name",
            {
              "validator": ".*"
            },
            "--part3Ip",
            {
              "validator": ".*"
            },
            "--part3Port",
            {
              "validator": ".*"
            },
            "--hostName",
            {
              "validator": ".*"
            },
            "--Tdate",
            {
              "validator": ".*"
            },
            "--Pdate",
            {
              "validator": ".*"
            },
            "--psiData",
            {
              "validator": ".*"
            },
            "--leveledData",
            {
              "validator": ".*"
            },
            "--limData",
            {
              "validator": ".*"
            },
            "--currData",
            {
              "validator": ".*"
            }
          ]
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": [
            "-c",
            "pkill",
            "-f",
            "scripts/start.sh"
          ]
        }
      ]
    },  
    "dialog:default",
    {
      "identifier": "fs:allow-app-write-recursive",
      "allow": [{ "path": "runtime.conf.json" }]
    },
    {
      "identifier": "fs:allow-app-read-recursive",
      "allow": [{ "path": "runtime.conf.json" }]
    }
  ]
}